!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Disability Discrimination'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Disability Discrimination'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application"
    /[if (lt IE 9) & (!IEMobile)]
      = stylesheet_link_tag "ie8.css?body=1"
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js"
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    .row
      %main{:role => "main"}
        = render 'layouts/messages'
        = yield
    /[if (lt IE 9) & (!IEMobile)]
      = javascript_include_tag "respond.min.js"
