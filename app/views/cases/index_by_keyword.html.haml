%h1 Cases by keyword

%input{type:"text", placeholder: "Filter by keyword", id:"kwfilter"}
%table{width: '100%'}
  %tbody
    - @keywords.each do |keyword|
      %tr.keywordrow
        %td
          %h3.keyword= keyword
          %table{width: '100%'}
            %tbody
              = render partial: 'case', collection: @cases_by_keyword[keyword].sort_by(&:title), as: '_case'
